{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block main %}
	<h1>Toutes les séries de la table program :</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Category</th>
				<th>synopsis</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for program in programs %}
				<tr>
					<td>{{ program.title  }}</td>
					<td>{{ program.category.name }}</td>
					<td>{{ program.synopsis}}</td>
					<td>
						<a href="{{ path('program_show', {'id': program.id}) }}">show</a>
						<a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

