{% extends 'base.html.twig' %}

{% block title %}Séries de la catégorie #{{ category.name }}
{% endblock %}

{% block main %}
	{% for program in programs %}
		<div>
			<h2>id :
				{{ program.id }}
				/
				{{ program.title }}
			</h2>
			<p>{{ program.synopsis }}</p>
			{# Lien vers la fiche de la série : #}
			<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche de
				{{ program.title }}</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}

	<a href="{{ path('category_index') }}">
		Retour à la liste des catégories
	</a>
{% endblock %}
