{% extends 'base.html.twig' %}

{% block title %}All actors
{% endblock %}


{% block main %}
	<h1>Tous les acteurs de la table actor :
	</h1>
	{% for actor in actors %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ actor.name }}</h2>

			{# Lien vers la fiche de l'acteur : #}
			<a href="{{ path("actor_show", { id: actor.id }) }}">Voir la fiche de l'acteur
				{{ actor.name }}</a>
		</div>
	{% else %}
		Aucun acteur trouvé.
	{% endfor %}

	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
